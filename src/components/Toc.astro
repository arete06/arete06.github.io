---
import LinkButton from "./LinkButton.astro";

export interface Props {
  headings: Array<{ text: string, slug: string }>;
}

const { headings } = Astro.props;
---

<aside class="toc-container">
  <nav class="toc mt-4 w-full text-left">
    <h4 class="text-lg font-semibold" style="color: #87afaf; font-size: 16px;">Table of contents</h4>
    <ul class="list-none p-0">
      {headings.map(heading => (
        <li>
          <a href={`#${heading.slug}`} class="text-sm">{heading.text}</a>
        </li>
      ))}
    </ul>
  </nav>
</aside>

<style>
  .toc-container {
    @apply fixed flex h-auto flex-col items-center justify-center gap-3;
    margin-top: 1em;
    flex-basis: 16em; 
    margin-left: 0px; 
  }
  .toc {
    @apply text-skin-base mt-4 w-full text-left;
  }
  .toc ul li::before {
    content: "#";
    color: #87afaf;
  }
  .toc a:hover {
    color: #87afaf;
    text-decoration: underline !important;
    text-decoration-style: dashed !important;
  }

  @screen toc {
    .toc-container {
      @apply block;
    }
  }
</style>

